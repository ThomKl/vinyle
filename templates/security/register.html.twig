{% extends 'base.html.twig' %}

{% block title %}Register !{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12 mt-4 mb-4">
            <h1 class="h3 mb-3 font-weight-normal text-center">S'inscrire</h1>

            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.username, 'Votre pseudo') }}
                {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.civilite, 'Civilité') }}
                {{ form_widget(form.civilite) }}
            </div>
            <div class="form-group">
                {{ form_label(form.prenom, 'Votre prénom') }}
                {{ form_widget(form.prenom, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.nom, 'Votre nom') }}
                {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email, 'Votre e-mail') }}
                {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.ville, 'Votre ville') }}
                {{ form_widget(form.ville, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.code_postal, 'Votre code postal') }}
                {{ form_widget(form.code_postal, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.adresse, 'Votre adresse') }}
                {{ form_widget(form.adresse, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.password, 'Votre mot de pase') }}
                {{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group text-center">
                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-lg btn-primary'} }) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}